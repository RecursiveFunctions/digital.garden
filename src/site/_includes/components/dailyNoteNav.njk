{% if page.filePathStem.includes("Daily Notes/") or page.filePathStem.includes("daily-notes") %}
  {% set currentDate = page.fileSlug %}
  {% set allNotes = collections.notes %}
  {% set prevNote = null %}
  {% set nextNote = null %}
  
  {% for note in allNotes %}
    {% if note.filePathStem.includes("Daily Notes/") %}
      {% set noteDate = note.fileSlug %}
      {% if noteDate < currentDate %}
        {% if prevNote == null or noteDate > prevNote.fileSlug %}
          {% set prevNote = note %}
        {% endif %}
      {% endif %}
      {% if noteDate > currentDate %}
        {% if nextNote == null or noteDate < nextNote.fileSlug %}
          {% set nextNote = note %}
        {% endif %}
      {% endif %}
    {% endif %}
  {% endfor %}
  
  <div class="daily-note-nav">
    {% if prevNote %}
      <a href="{{ prevNote.url }}" class="prev-day internal-link" target="">
        <i icon-name="chevron-left"></i>
        {{ prevNote.fileSlug | replace("2025-01-", "Jan ") | replace("2025-02-", "Feb ") | replace("2025-03-", "Mar ") | replace("2025-04-", "Apr ") | replace("2025-05-", "May ") | replace("2025-06-", "Jun ") | replace("2025-07-", "Jul ") | replace("2025-08-", "Aug ") | replace("2025-09-", "Sep ") | replace("2025-10-", "Oct ") | replace("2025-11-", "Nov ") | replace("2025-12-", "Dec ") | replace("2024-01-", "Jan ") | replace("2024-02-", "Feb ") | replace("2024-03-", "Mar ") | replace("2024-04-", "Apr ") | replace("2024-05-", "May ") | replace("2024-06-", "Jun ") | replace("2024-07-", "Jul ") | replace("2024-08-", "Aug ") | replace("2024-09-", "Sep ") | replace("2024-10-", "Oct ") | replace("2024-11-", "Nov ") | replace("2024-12-", "Dec ") | replace("2023-01-", "Jan ") | replace("2023-02-", "Feb ") | replace("2023-03-", "Mar ") | replace("2023-04-", "Apr ") | replace("2023-05-", "May ") | replace("2023-06-", "Jun ") | replace("2023-07-", "Jul ") | replace("2023-08-", "Aug ") | replace("2023-09-", "Sep ") | replace("2023-10-", "Oct ") | replace("2023-11-", "Nov ") | replace("2023-12-", "Dec ") | replace("-", " ") }}
      </a>
    {% endif %}
    
    {% if nextNote %}
      <a href="{{ nextNote.url }}" class="next-day internal-link" target="">
        {{ nextNote.fileSlug | replace("2025-01-", "Jan ") | replace("2025-02-", "Feb ") | replace("2025-03-", "Mar ") | replace("2025-04-", "Apr ") | replace("2025-05-", "May ") | replace("2025-06-", "Jun ") | replace("2025-07-", "Jul ") | replace("2025-08-", "Aug ") | replace("2025-09-", "Sep ") | replace("2025-10-", "Oct ") | replace("2025-11-", "Nov ") | replace("2025-12-", "Dec ") | replace("2024-01-", "Jan ") | replace("2024-02-", "Feb ") | replace("2024-03-", "Mar ") | replace("2024-04-", "Apr ") | replace("2024-05-", "May ") | replace("2024-06-", "Jun ") | replace("2024-07-", "Jul ") | replace("2024-08-", "Aug ") | replace("2024-09-", "Sep ") | replace("2024-10-", "Oct ") | replace("2024-11-", "Nov ") | replace("2024-12-", "Dec ") | replace("2023-01-", "Jan ") | replace("2023-02-", "Feb ") | replace("2023-03-", "Mar ") | replace("2023-04-", "Apr ") | replace("2023-05-", "May ") | replace("2023-06-", "Jun ") | replace("2023-07-", "Jul ") | replace("2023-08-", "Aug ") | replace("2023-09-", "Sep ") | replace("2023-10-", "Oct ") | replace("2023-11-", "Nov ") | replace("2023-12-", "Dec ") | replace("-", " ") }}
        <i icon-name="chevron-right"></i>
      </a>
    {% endif %}
  </div>

  <style>
    .daily-note-nav {
      display: flex;
      justify-content: space-between;
      margin: 2rem 0;
      padding: 1rem;
      border-top: 1px solid var(--background-modifier-border);
      border-bottom: 1px solid var(--background-modifier-border);
    }
    
    .daily-note-nav a {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      color: var(--text-normal);
      text-decoration: none;
      padding: 0.5rem 1rem;
      border-radius: var(--radius-s);
      transition: background-color 0.2s ease;
    }
    
    .daily-note-nav a:hover {
      background-color: var(--background-modifier-hover);
    }
    
    .daily-note-nav i {
      width: 1em;
      height: 1em;
    }
  </style>
{% endif %} 